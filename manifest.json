{
  "manifest_version": 3,
  "name": "ClearView",
  "version": "1.0",
  "description": "Accessibility tool: fonts, spacing, italics, link visibility, and colors",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "popup/popup.html"

  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/text-formatter.js"],
      "run_at": "document_idle"
    }
  ]
}
