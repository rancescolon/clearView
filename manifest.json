{
  "manifest_version": 3,
  "name": "ClearView",
  "version": "1.0",
  "description": "Enhances web accessibility for all users including color blindness, dyslexia, visual impairment, hearing loss, and motor disabilities.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tts",
    "tabs"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ]
}
